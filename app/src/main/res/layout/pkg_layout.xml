<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="4dp"
    android:layout_marginHorizontal="6dp"
    android:id="@+id/packageCard"
    app:cardCornerRadius="17dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="207dp"
        android:layout_margin="2dp"
        android:background="@drawable/all_package_background_transparent">

        <RelativeLayout
            android:id="@+id/packageLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border_yellow">


            <LinearLayout
                android:id="@+id/packageNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4dp"
                android:orientation="horizontal"
                android:paddingHorizontal="12dp"
                android:paddingBottom="5dp">

                <TextView
                    android:id="@+id/packageNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="TextView"
                    android:textColor="@color/blue"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/pkgId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/packageNum"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="4dp"
                android:gravity="right"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="מזהה חבילה:"
                    android:paddingRight="10dp"
                    android:textColor="@color/blue"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/pkgIdText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/pkgId"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="2dp"
                android:layout_marginRight="4dp"
                android:gravity="right"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/packageKey"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="10dp"
                    android:gravity="right"
                    android:textColor="#000000"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/disributionCenterAddr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/pkgIdText"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="8dp"
                android:layout_marginRight="4dp"
                android:gravity="right"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="1dp"
                    android:gravity="right"
                    android:text="כתובת המחסן:"
                    android:paddingRight="10dp"
                    android:textColor="@color/blue"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/disributionCenterAddrText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/disributionCenterAddr"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="2dp"
                android:layout_marginRight="4dp"
                android:gravity="right"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/distributionCenterAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:paddingRight="10dp"
                    android:textColor="#000000"
                    android:textStyle="bold" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/packageStat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/disributionCenterAddrText"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="8dp"
                android:layout_marginRight="4dp"
                android:gravity="right"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="1dp"
                    android:gravity="right"
                    android:text="סטטוס:"
                    android:paddingRight="10dp"
                    android:textColor="@color/blue"
                    android:textStyle="bold" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/packageStatText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/packageStat"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="2dp"
                android:layout_marginRight="4dp"
                android:gravity="right"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/packageStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:gravity="right"
                    android:paddingRight="10dp"
                    android:textColor="#000000"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/packageStatText"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal"
                android:paddingHorizontal="2dp"
                android:paddingBottom="5dp">

                <Button
                    android:id="@+id/moreDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:text="פרטים נוספים"
                    android:textColor="@color/redColor"
                    android:textStyle="bold"
                    android:visibility="visible" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>